generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Owners {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     String   @default("User")
  created  DateTime @default(now())
  updated  DateTime @default(now())
  
}

model Trip {
  id        Int      @id @default(autoincrement())
  departure String
  arrival   String
  startDate DateTime
  endDate   DateTime
  adult     Int
  minor     Int
}

model Passenger {
  id                  Int      @id @default(autoincrement())
  firstName           String
  lastName            String
  middleName          String?
  suffix              String?
  dateOfBirth         DateTime?
  email               String
  phoneNumber         String
  redressNumber       String?
  knownTravellerNumber String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  emergencyContact    EmergencyContact?
  bags                Bag[]
}

model EmergencyContact {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String
  phoneNumber  String
  passengerId  Int @unique
  passenger    Passenger @relation(fields: [passengerId], references: [id])
}

model Bag {
  id           Int      @id @default(autoincrement())
  numOfBags    Int
  passengerId  Int
  passenger    Passenger @relation(fields: [passengerId], references: [id])
}

model Payment {
  id Int @id @default(autoincrement())
  name String
  number String
  date String
  ccv String
}

